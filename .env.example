# =============================================================================
# AEGIS Configuration
# Copy this file to .env and update values as needed
# =============================================================================

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
AEGIS_ENV=development
AEGIS_DEBUG=true
AEGIS_LOG_LEVEL=INFO
AEGIS_SECRET_KEY=change-me-in-production

# API Server
AEGIS_API_HOST=0.0.0.0
AEGIS_API_PORT=8000
AEGIS_API_WORKERS=1
AEGIS_API_RELOAD=true

# -----------------------------------------------------------------------------
# Database Connections
# For local development, use Docker Compose defaults
# -----------------------------------------------------------------------------

# PostgreSQL / TimescaleDB
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=aegis
POSTGRES_PASSWORD=aegis_dev_password
POSTGRES_DATABASE=aegis

# Graph Database (JanusGraph for local, Neptune for AWS)
GRAPH_DB_HOST=localhost
GRAPH_DB_PORT=8182
GRAPH_DB_USE_SSL=false

# OpenSearch (Vector Database)
OPENSEARCH_HOST=localhost
OPENSEARCH_PORT=9200
OPENSEARCH_USE_SSL=false
OPENSEARCH_USER=admin
OPENSEARCH_PASSWORD=admin

# Redis (Cache)
REDIS_HOST=localhost
REDIS_PORT=6379

# Kafka
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# -----------------------------------------------------------------------------
# LLM Configuration
# -----------------------------------------------------------------------------

# Provider: mock, bedrock, ollama
LLM_PROVIDER=mock

# AWS Bedrock (if LLM_PROVIDER=bedrock)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
BEDROCK_MODEL_ID=anthropic.claude-3-sonnet-20240229-v1:0

# Ollama (if LLM_PROVIDER=ollama)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3

# -----------------------------------------------------------------------------
# Authentication
# -----------------------------------------------------------------------------

# Provider: local, cognito
AUTH_PROVIDER=local

# Local JWT (if AUTH_PROVIDER=local)
JWT_SECRET_KEY=jwt-secret-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# AWS Cognito (if AUTH_PROVIDER=cognito)
COGNITO_USER_POOL_ID=
COGNITO_CLIENT_ID=
COGNITO_REGION=us-east-1

# -----------------------------------------------------------------------------
# Multi-Tenancy
# -----------------------------------------------------------------------------
DEFAULT_TENANT_ID=default
ENABLE_MULTI_TENANT=false
